10.5:
do {
   cin.clear();
   bool isbad = false;
   char choice;	
   cout << "Re-run or quit (R/Q)" << endl;
   cin >> choice;
   choice=toupper(choice);
   isbad = (!isalpha(choice) || choice!='R' || choice!='Q');
} while(cin.bad() || isbad); //repeat if automagic typecasting occured

