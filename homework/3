#include <iostream>
#include <cstring>
#include <cstdlib>
using namespace std;

int main() {
    char place[] = "The Windy City";
    char srchstr[] = "Windy";

    if(strstr(place, srchstr)) {
    		     cout << "Windy Found!" << endl;
	} else {
	cout << "Windy not found." << endl;
	}
	return 0;
}

