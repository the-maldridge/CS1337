			break;
		 case 9:
		 	name = "September";
			break;
		 case 10:
		 	name = "October";
			break;
		 case 11:
		 	name = "November";
			break;
		 case 12:
		 	name = "December";
			break;
	}
}

string Month::getName() {
       return name;
}

int Month::getMonthNumber() {
    return monthNumber;
}

